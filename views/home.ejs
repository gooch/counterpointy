<div class="bubble make-your-point point-entry collapsed">
    <form class="item" method="POST" action="/new_point">
        <textarea name="text" rows="1">Make your point</textarea>
        <input class="save-button" type="submit" value="Save" />
    </form>
</div>

<% if (consider) { %>
    <div class="center column">
        <%- partial('conclusion_and_premise', {
            conclusion: consider.conclusion,
            support: consider.support,
            premise: consider.premise
        }) %>
    </div>
<% } %>

<div class="left column bubble">
    <h3>Featured points</h3>
    <%- partial('points', { points: featured_points }) %>
</div>

<div class="right column bubble">
    <h3>Recent points</h3>
    <%- partial('points', { points: recent_points }) %>
</div>
