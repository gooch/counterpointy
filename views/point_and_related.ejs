<div class="main-point">
<%- linkify(point.text) %>
</div>
<% if (session.user) { %>
    <div class="main-point-edit" style="display: none">
        <form method="POST" action="/point/<%= point.hash %>/edit">
            <textarea name="text"><%= point.text %></textarea>
            <input class="save-button" type="submit" value="Save" />
        </form>
    </div>
    <form class="pstance" method="POST" action="/point/<%= point.hash %>/pstance">
        <%- partial('select_stance', { stance: point.stance }) %>
        <!-- <input type="submit" value="Save" /> -->
    </form>
<% } %>

<% function showUsers(users, partial) {
    users.forEach(function (user) {
        %><%- partial('avatar20', { user: user }) %><%
    });
}
%>
<% if (agree.length) { %>
    <p class="heading">Agree: <% showUsers(agree, partial); %></p>
<% } %>
<% if (disagree.length) { %>
    <p class="heading">Disagree: <% showUsers(disagree, partial); %></p>
<% } %>

<hr class="clear-both" />

<div class="supporting column">
    <h3>Supporting:</h3>
    <%- partial('premises', { point: point, support: true, premises: supporting }) %>
</div>

<div class="opposing column">
    <h3>Opposing:</h3>
    <%- partial('premises', { point: point, support: false, premises: opposing }) %>
</div>

<br class="clear-both" />

<div class="supporting column">
    <% if (supports.length) { %>
        <h3>Supports:</h3>
        <div>
        <% supports.forEach(function (p) { %>
            <%- partial('point', { point: p}) %>
        <% }); %>
        </div>
    <% } %>
    <br />
</div>

<div class="opposing column">
    <% if (opposes.length) { %>
        <h3>Opposes:</h3>
        <div>
        <% opposes.forEach(function (p) { %>
            <%- partial('point', { point: p}) %>
        <% }); %>
        </div>
    <% } %>
</div>
